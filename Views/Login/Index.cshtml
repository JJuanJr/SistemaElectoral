@model SistemaElectoral.Models.LoginModel

@{
    Layout = null;
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @*<title>Login</title>*@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/styles/login/style.css"/>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @*<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />*@
    @*<link rel="stylesheet" href="~/SistemaElectoral.styles.css" asp-append-version="true" />*@
</head>
<body>
    <div class="login-card">
        <img class="profile-img-card" src="~/css/imagenes/login/candado.png">
        <form asp-action="Validar" class="form-signin">
            <div class="form-group">
                <input asp-for="user" class="form-control" type="number" required oninvalid="setCustomValidity('Campo vacio')" oninput="setCustomValidity('')" placeholder="Usuario" value="">

                <input asp-for="password" class="form-control" type="password" required oninvalid="setCustomValidity('Campo vacio')" oninput="setCustomValidity('')" placeholder="Contraseña" value="">
                <div class="checkbox">
                    <div class="form-check">
                        <input asp-for="recordar" class="form-check-input" type="checkbox" id="formCheck-1">
                        <label class="form-check-label" for="formCheck-1">Recuerdame</label>
                    </div>
                </div>
                @if(ViewBag.Invalido == true)
                {
                    <a class="text-danger fw-bold">¡Usuario no encontrado!</a>
                }
                <button class="btn btn-primary btn-lg d-block btn-signin w-100" type="submit">Ingresar</button>
            </div>
        </form>
        <br />
        <a class="forgot-password" href="#">¿Olvidó su usuario?</a>
        <br>
        <a class="forgot-password" href="#">¿Olvidó su contraseña?</a>
    </div>
    @*<script src="~/js/site.js" asp-append-version="true"></script>*@
    @*@await RenderSectionAsync("Scripts", required: false)*@
</body>
</html>

