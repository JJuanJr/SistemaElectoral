@model InstitucionModel

@{
    ViewData["Title"] = "Modificar";
}

<h2 class="text-light text-center">MODIFICAR INSTITUCION</h2>

<form asp-action="Actualizar" method="post" enctype="multipart/form-data" class="text-light">

    @Html.HiddenFor(m => m.fk_id_ubicacion)
    @Html.HiddenFor(m => m.logo)

    <div>
        <label>NOMBRE</label>
        <input asp-for="nombre" class="form-control" />
        @*@Html.EditorFor(m => m.nombre)*@
    </div>

    <div>
        <label>REGISTRO</label>
        <input asp-for="registro" class="form-control" />
        @*@Html.EditorFor(m => m.registro)*@
    </div>

    <div>
        <label>NOMBRE DEL RECTOR</label>
        <input asp-for="nombre_rector" class="form-control"/>
        @*@Html.EditorFor(m => m.nombre_rector)*@
    </div>

    <div>
        <label>TELEFONO</label>
        <input asp-for="telefono" class="form-control" />
        @*@Html.EditorFor(m => m.telefono)*@
    </div>

    <div>
        <label>LOGO</label>
        <input asp-for="imagen" type="file" accept="image/png"/>
    </div>

    <div class="mb-3 text-center">
        <button class="btn btn-light" type="submit">Modificar</button>
    </div>
</form>

<div class="text-lg-end">
    <a asp-action="Index" class="text-light">VOLVER</a>
</div>
