@model List<PermisoModel>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center text-light">Permisos</h1>

<a asp-action="Nuevo" class="text-light">CREAR NUEVO PERMISO</a>

<div class="table-responsive">
    <table class="table text-light table-bordered">
        <tr class="text-center">
            <th>DESCRIPCION</th>
            <th>OPCIONES</th>
        </tr>
        @foreach(var item in Model)
        {
            <tr>
                <td>
                    @item.descripcion
                </td>
                <td class="text-center">
                    <a asp-action="Modificar" asp-route-id="@item.id" class="text-light">MODIFICAR</a>
                    <a asp-action="Eliminar" asp-route-id="@item.id" class="text-light">ELIMINAR</a>
                </td>
            </tr>
        }
    </table>
</div>

