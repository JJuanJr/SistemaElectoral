@model EleccionModel

@{
    ViewData["Title"] = "Nuevo";
}

<h2 class="text-light text-center">NUEVA ELECCION</h2>

<form asp-action="Guardar" method="post">
    <div>
        <label class="text-light">NOMBRE</label>
        <input asp-for="nombre" class="form-control"/>
    </div>

    <div>
        <label class="text-light">FECHA INICIO</label>
        <input type="date" asp-for="fecha_inicio" class="form-control"/>
    </div>

    <div>
        <label class="text-light">FECHA FIN</label>
        <input type="date" asp-for="fecha_fin" class="form-control"/>
    </div>

    <div>
        <button class="btn btn-light" type="submit">CREAR</button>
    </div>
</form>

<a asp-action="Index" class="text-light">VOLVER</a>