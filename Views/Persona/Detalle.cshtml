@model PersonaModel
@{
    ViewData["Title"] = "Detalle";
}

<h2 class="text-light text-center">PERFIL</h2>

<div>
    <div>
        @*quitar width y height, agregarlos a css*@
        <img width="200" height="200" src="~/css/imagenes/@Model.foto" alt=""/>
    </div>
    <dl class="text-light">
        <dt class="form-group">
            ID
        </dt>
        <dd class="form-group">
            @Model.id
        </dd>
        

        <dt class="form-group">
            NOMBRE
        </dt>
        <dd class="form-group">
            @Model.nombre 
        </dd>
        
        <dt class="form-group">
            APELLIDO
        </dt>
        <dd class="form-group">
            @Model.apellido
        </dd>
        
        <dt class="form-group">
            EDAD
        </dt>
        <dd class="form-group">
            @Model.edad
        </dd>

         <dt class="form-group">
            GENERO
        </dt>
        <dd class="form-group">
            @(Model.genero == "M" ? "Masculino" : "Femenino")
        </dd>

        <dt class="form-group">
            ROL
        </dt>
        <dd class="form-group">
            @((ViewData["Rol"] as RolModel).nombre)
        </dd>
    </dl>

    <a asp-action="Index" class="text-light">VOLVER</a> 
 
</div>