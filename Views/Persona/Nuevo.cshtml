@using System.Data
@model SistemaElectoral.Models.PersonaModel

@{
    ViewData["Title"] = "Nuevo";
}

<h2 class="text-light text-center mb-4">CREAR NUEVO USUARIO</h2>

<form asp-action="Guardar" method="post" id="newuser">
    <div class="form-group m-3">
        <label class="text-light">ID</label>
        <input asp-for="id" class="form-control" type="number" value="">
    </div>

    <div class="form-group m-3">
        <label class="text-light">NOMBRE</label>
        <input asp-for="nombre" class="form-control" type="text" value="">
    </div>

    <div class="form-group m-3">
        <label class="text-light">APELLIDO</label>
        <input asp-for="apellido" class="form-control" type="text" value="">
    </div>

    <div class="form-group m-3">
        <label class="text-light">EDAD</label>
        <input asp-for="edad" class="form-control" type="number" value="">
    </div>

    <div class="form-group m-3">
        <label class="text-light">GENERO</label>
        <select asp-for="genero" class="form-control">
            <option value="M">Masculino</option>
            <option value="F">Femenino</option>
        </select>
    </div>

    <div class="form-group m-3">
        <label class="text-light">ROL</label>
        <select asp-for="fk_id_rol" class="form-control">
            @foreach(DataRow row in (ViewData["Rol"] as DataTable).Rows)
            {
                <option value="@row[0].ToString()">@row[1].ToString()</option>
            }
        </select>
    </div>
    <div class="form-group m-3 text-center">
        <button class="btn btn-light" type="submit">Guardar</button>
    </div>
</form>

<div class="text-lg-end">
    <a asp-action="Index" class="text-light">VOLVER</a>
</div>