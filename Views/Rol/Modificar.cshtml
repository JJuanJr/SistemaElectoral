@model RolModel

@{
    ViewData["Title"] = "Modificar";
}

<h2 class="text-light text-center">ROL</h2>

<form asp-action="Actualizar" method="post" id="modificar">
    @Html.HiddenFor(m => m.id)
    @Html.HiddenFor(m => m.estado)

    <div class="form-group mb-3">
        <label class="text-light">NOMBRE</label>
        @Html.EditorFor(m => m.nombre, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-grup text-light">
        <table>
            @for(int i = 0; i < Model.permisos.Count; i++)
            {
                <tr>
                    <td>
                        <input type="hidden" asp-for="@Model.permisos[i].Value" />
                        <input asp-for="@Model.permisos[i].Selected" />
                        <label>@Model.permisos[i].Text</label>
                    </td>
                </tr>
            }
        </table>
    </div>

    <div class="form-group text-center" id="botones-centro">
        <button class="btn btn-light" type="submit">Guardar</button>
    </div>
</form>

<div class="text-lg-end">
    <a asp-action="Index" class="text-light">VOLVER</a>
</div>


